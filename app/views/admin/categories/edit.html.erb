<h1>Editing category</h1>

<% form_for :category ,:url => admin_category_path(@category), :html => {:method => :put } do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :名称 %><br />
    <%= f.text_field :name %>
  </p>
  <p>
  <%= f.label :所属分类 %><br />
  <%= f.collection_select :parent_id,@categories,  :id, :name, {:include_blank => true}%>
    </p>
    <p>
    <%= f.label :类型 %><br />
<%= f.radio_button(:belongs_to, "product")%>产品
<%= f.radio_button(:belongs_to, "shop") %>店铺
  </p>
  <p>
    <%= f.submit "更新" %>
  </p>
<% end %>
<%= link_to '返回', admin_categories_path %>
